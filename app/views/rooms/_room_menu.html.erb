<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to t("listing"), listing_room_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to t("pricing"), pricing_room_path, class: "sidebar-link active" %>
    <% if !@room.price.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to t("description"), description_room_path, class: "sidebar-link active" %>
    <% if !@room.name.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to t("photos"), photo_upload_room_path, class: "sidebar-link active" %>
    <% if !@room.photos.blank? %>
      <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to t("amenities"), amenities_room_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to t("location"), location_room_path, class: "sidebar-link active" %>
    <% if !@room.address.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
</ul>
<hr/>

<% is_ready = !@room.price.blank? && !@room.name.blank? && !@room.address.blank? %>
<%= form_for @room do |f| %>
  <% if !@room.active %>
    <%= f.hidden_field :active, value: true %>
    <%= f.submit t("publish"), id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>
  <% else %>
    <%= f.hidden_field :active, value: false %>
    <%= f.submit t("unpublish"), id: "publish_button", class: "btn btn-normal btn-block" %>
  <% end %>
<% end %>
